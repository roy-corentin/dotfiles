// Waybar modules configuration
{
  "wlr/taskbar": {
    "all-outputs": false,
    "format": "{icon}",
    "icon-size": "20",
    "on-click": "activate",
    "on-click-right": "close",
    "tooltip-format": "Go to {title}",
    "ignore-list": ["kitty", "kitty-scratchpad"]
  },

  "hyprland/workspaces": {
    "disable-scroll": true,
    "sort-by": "number",
    "all-outputs": true,
    "warp-on-scroll": false,
    "format": "{icon}",
    "format-icons": {
      "1": "󰍪",
      "2": "󰖟",
      "3": "",
      "default": ""
    },
    "persistent_workspaces": {
      "*": 3
    }
    // "format-icons": {
    //   "urgent": "",
    //   // "active": "",
    //   "default": ""
    // },
  },

  "custom/settings": {
    "format": " ",
    "tooltip": true,
    "tooltip-format": "Open Settings!",
    "on-click": "systemsettings"
  },

  "custom/vpn": {
    "format": "VPN ",
    "exec": "echo '{\"class\": \"connected\"}'",
    "exec-if": "test -d /proc/sys/net/ipv4/conf/tun0",
    "return-type": "json",
    "interval": 5
  },

  "custom/clipboard": {
    "format": "󰨸",
    "interval": "once",
    "tooltip": true,
    "tooltip-format": "Open Clipboard Manager!",
    "return-type": "json",
    "on-click": "~/.config/rofi/clipboardlist.sh",
    "on-click-middle": "rm -f ~/.cache/cliphist/db; waybar-signal clipboard",
    "exec": "printf '{\"tooltip\":\"%s\"}' $(cliphist list | wc -l)' item(s) in the clipboard\r(Mid click to clear)'",
    "exec-if": "[ -x \"$(command -v cliphist)\" ] && [ $(cliphist list | wc -l) -gt 0 ]",
    "signal": 9
  },

  "hyprland/window": {
    "icon": true,
    "icon-size": 18,
    "format": "󰍟 {title}",
    "rewrite": {
      "(.*) - Brave": "$1",
      ".*emacs -nw.*": "EmacsTTY",
      "(.*) - .*": "$1"
    },
    "separate-outputs": false,
    "max-length": 20
  },

  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "󰒳",
      "deactivated": "󰒲"
    }
  },

  "custom/wallpaper": {
    "format": " ",
    "on-click": "~/.config/rofi/wallpaper.sh",
    "tooltip": true,
    "tooltip-format": " Change Wallpaper!"
  },

  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "<span foreground='red'><sup></sup></span>",
      "none": "",
      "dnd-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-none": "",
      "inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "inhibited-none": "",
      "dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-inhibited-none": ""
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },

  "custom/pacman": {
    "format": "󰦗 {}",
    "interval": 3600, // every hour
    "exec": "checkupdates | wc -l", // check for updates
    "exec-if": "exit 0", // always run; consider advanced run conditions
    "on-click": "kitty --title float-system-update --hold --detach yay -Syyu",
    "signal": 8
  },

  "custom/expand-icon": {
    "format": "",
    "tooltip": false
  },

  "tray": {
    "icon-size": 18,
    "spacing": 12
  },

  "clock": {
    "format": "{:%e %b 󰃭 %H:%M } ",
    // "format-alt": "{:%Y-%m-%d}",
    "tooltip": true,
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "on-click": "kitty --title float-calcurse calcurse"
  },

  "temperature": {
    "critical-threshold": 80,
    "format": "{temperatureC}°C {icon}",
    "hwmon-path-abs": "/sys/devices/pci0000:00/0000:00:01.0/0000:01:00.0/nvme/nvme0/hwmon1/temp1_input",
    "format-icons": ["", "", ""]
  },

  "network": {
    "format": "{ifname}",
    "format-wifi": "  {essid} {bandwidthDownBytes}",
    "format-ethernet": "󰈀 {bandwidthDownBytes}",
    "format-disconnected": "󱍢 No Internet",
    "tooltip-format": "󰊗 {ifname} via {gwaddr}",
    "tooltip-format-wifi": "  {ifname} {ipaddr} ({signalStrength}%)",
    "tooltip-format-ethernet": "  {ifname}",
    "on-click": "kitty --title float-impala impala",
    "max-length": 50,
    "interval": 5
  },

  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile} Driver: {driver}",
    "tooltip": true,
    "format-icons": {
      "power-saver": "󰡳",
      "balanced": "󰊚",
      "performance": "󰡴"
    }
  },

  "battery": {
    "format": "{capacity}% {icon}",
    "format-plugged": " {capacity}%",
    "format-full": "󰂅",
    // "format-charging": "󱐋{capacity}%",
    // "format-alt": "{icon} {time}",
    // "format-good": "", // An empty format will hide the module
    // "format-icons": ["", "", "", "", ""],
    "format-icons": {
      "charging": ["󰢜", "󰂆", "󰂇", "󰂈", "󰢝", "󰂉", "󰢞", "󰂊", "󰂋", "󰂅"],
      "default": ["󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"]
    },
    "tooltip-format-discharging": "{power:>1.0f}W↓ {capacity}%",
    "tooltip-format-charging": "{power:>1.0f}W↑ {capacity}%",
    "interval": 5,
    "states": {
      "warning": 30,
      "critical": 20
    },
    "tooltip": true
  },

  "pulseaudio": {
    "scroll-step": 1, // %, can be a float
    "format": "{icon} {volume}%",
    "format-muted": " Mute",
    "format-bluetooth": " {volume}% {format_source}",
    "format-bluetooth-muted": " Mute",
    "format-source": "{volume}%",
    "format-source-muted": "",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "default": ["", "", ""]
    },
    "max-volume": 150,
    "on-click": "kitty --class=Wiremix -e wiremix"
  },

  "cpu": {
    "format": " {usage}% ",
    "interval": 5,
    "tooltip": false,
    "on-click": "kitty -e btop"
  },

  "memory": {
    "format": " {}%",
    "format-alt": " {used:0.1f}G",
    "interval": 5
  },

  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": ["󰃞", "󰃟", "󰃠"]
  },

  "custom/idle_inhibitor": {
    "interval": 60,
    "return-type": "json",
    "format": "{icon}",
    "format-icons": {
      "on": "󰒳",
      "off": "󰒲"
    },
    "exec": "inhibit-idle",
    "on-click": "inhibit-idle off; inhibit-idle interactive",
    "on-click-middle": "inhibit-idle off",
    "signal": 15
  },

  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": [
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      ""
    ],
    "scroll-step": 1
  },

  "custom/screen-recording": {
    "on-click": "$HOME/.config/hypr/scripts/screenrecord.sh",
    "exec": "$HOME/.config/waybar/indicators/screen-recording.sh",
    "signal": 8,
    "return-type": "json"
  }
}
